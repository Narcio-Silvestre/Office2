<!DOCTYPE html>
<html lang="en">
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style data-merge-styles="true"></style>
    <style data-merge-styles="true"></style>
        <title>Encargos</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet"  href="https://cdn.datatables.net/v/bs5/dt-1.13.4/r-2.4.1/sc-2.1.1/datatables.min.css"  />
        <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@x.x.x/dist/select2-bootstrap4.min.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
    <style>
        .fade-in {
            opacity: 0;
            transition: opacity 0.5s ease-in;
        }

            .fade-in.active {
                opacity: 1;
            }
    </style>
    </head>
<body >
        <header>
            <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="navnav">
                <div class="container-fluid">
               
                    <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                        <span class="navbar-toggler-icon" data-bs-target="#offcanvasExample"></span>
                    </button>
                    <a class="navbar-brand fw-bold me-auto " asp-action="Index" asp-controller="Home" >Encargos</a>
               
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <form class="d-flex ms-auto" role="search">
                        <div class="input-group mb-3 my-3 my-lg-8">
                            <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                                <li>
                                    <a href="https://www.fehstgroup.com/pt/" id="menu" class="nav-link">
                                        Fehst Componentes
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </form>
                   
                    </div>
                </div>
            </nav>
      

            <div class="offcanvas offcanvas-start bg-light sidebar-nav" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            
                <div class="offcanvas-body p-0" id="navSidebar">
               
                       <ul>
                           <li>
                               <a asp-action="Index" asp-controller="Home">
                                    <i class="bi bi-house"></i>
                                   <span class="nav-item">
                                       Home
                                   </span>
                               </a>
                           </li>
                            <li>
                            <a asp-action="Create" asp-controller="Encargo">
                                    <i class="bi bi-card-text"></i>
                                    <span class="nav-item">
                                        Criar
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="Edit" asp-controller="Encargo">
                                    <i class="bi bi-pencil-square"></i>
                                    <span class="nav-item">
                                        Editar
                                    </span>
                                </a>
                            </li>
                            <li>
                            <a asp-action="AllInter" asp-controller="Encargo">
                                    <i class="bi bi-tools"></i>
                                    <span class="nav-item">
                                        Intervir
                                    </span>
                                </a>
                            </li>
                            <li>
                            <a asp-action="AllVal" asp-controller="Encargo">
                                    <i class="bi bi-check2"></i>
                                    <span class="nav-item">
                                        Validar
                                    </span>
                                </a>
                            </li>
                        
                        
                        
                            <li>
                            <a asp-action="All" asp-controller="Encargo">
                                    <i class="bi bi-three-dots"></i>
                                    <span class="nav-item">
                                        Concluídos
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Molde">
                                    <i class="bi bi-collection-fill"></i>
                                    <span class="nav-item">
                                        Moldes
                                    </span>
                                </a>
                            </li>


                            <li>
                                <hr />
                            </li>
                            <li id="logout" >
                                <a asp-action="Out2" asp-controller="Login">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span class="nav-item">
                                        Sair
                                    </span>
                                </a>
                            </li>

                       </ul>

               
                </div>
            </div>

        </header>
        <div class="container">

            <main role="main" class="pb-3 fade-in" id="page">
                <div class="container-fluid">
                @RenderBody()
                </div>
            </main>
            
        </div>
        <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            var page = document.getElementById("page");
            page.classList.add("active");
        });
        </script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/r-2.4.1/sc-2.1.1/datatables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
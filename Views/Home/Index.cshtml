@page


 <body >
    <main>
        <div class="row mt-5">
            

            <div class="row mb-4 mt-5 justify-content-center">


              
                <div class="col-md-auto mb-3">
                    <div class="card text-center shadow-lg " style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Encargos</h5>
                            <p class="card-text">Nº de Encargos no ano de @System.DateTime.Now.Date.Year</p>
                            <div class="m-auto" style="border-radius:50%;width:2.5rem;height:2.5rem;display:flex;align-items:center;justify-content:center;color:white;background-color:#0d6efd;"><p class="mt-3">@ViewBag.encYear</p></div>

                        </div>
                    </div>
                </div>
                <div class="col-md-auto mb-3">
                    <div class="card text-center shadow-lg " style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Moldes</h5>
                            <p class="card-text">Nº de Moldes Registados</p>
                            <div class="m-auto" style="border-radius:50%;width:2.5rem;height:2.5rem;display:flex;align-items:center;justify-content:center;color:white;background-color:#0d6efd;"><p class="mt-3">@ViewBag.allmoldes</p></div>

                        </div>
                    </div>
                </div>
                <div class="col-md-auto mb-3">
                    <div class="card text-center shadow-lg " style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Completos</h5>
                            <p class="card-text">Nº Encargos Completos em @System.DateTime.Now.Date.Year</p>
                            <div class="m-auto" style="border-radius:50%;width:2.5rem;height:2.5rem;display:flex;align-items:center;justify-content:center;color:white;background-color:#0d6efd;"><p class="mt-3">@ViewBag.encCompleted</p></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5 justify-content-center mt-1 ">

                  
                    <div id="box-2" class="col-md-7 col-lg-8 py-5 bg-light shadow-lg mt-3 table-responsive justify-content-center">


                        <table class="table table-hover tablee">
                            <thead>
                                <tr>
                                    <th scope="col">Encargo</th>
                                    <th scope="col">Requerente</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Data</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (ViewBag.encargo != null)
                            {
                                @for (int x = 0; x < ViewBag.encargo.Count; x++)
                                {
                                    if (@ViewBag.encargo[x].estadoId != 1)
                                    {
                                        <tr>
                                            <td>@ViewBag.encargo[x].nrEncargo</td>
                                            <td>@ViewBag.encargo[x].entidade</td>
                                            @if (@ViewBag.encargo[x].estadoId == 2)
                                            {
                                                <td style="color:rgb(0,0,127)">@ViewBag.encargo[x].estado</td>
                                                <td>@ViewBag.encargo[x].data</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Info" asp-controller="Encargo" asp-route-id="@ViewBag.encargo[x].id" class="btn btn-sm btn-primary">Executar</a>
                                                    </div>

                                                </td>
                                            }
                                            else
                                            {
                                                <td style="color:darkslateblue">@ViewBag.encargo[x].estado</td>
                                                <td>@ViewBag.encargo[x].data</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Info" asp-controller="Encargo" asp-route-id="@ViewBag.encargo[x].id" class="btn btn-sm btn-primary">Validar</a>
                                                    </div>

                                                </td>
                                            }

                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        </table>
                </div>

                    
            </div>

        </div>
    </main>
</body>


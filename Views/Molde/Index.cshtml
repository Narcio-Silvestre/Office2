
<body>
    <div class="container ">
        <main>
            <div class="row g-5 justify-content-center mt-1 ">


                <div class="col-md-7 col-lg-8  py-5 bg-white shadow-lg mt-3 table-responsive justify-content-center">
                    @if (ViewBag.allMoldes != null && ViewBag.molIntv != null)
                    {
                        <table class="table table-hover tablee ">
                            <thead>
                                <tr>
                                    <th scope="col">Molde</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                @for (int x = 0; x < ViewBag.allMoldes.Count; x++)
                                {
                                    <tr>
                                        <td>@ViewBag.allMoldes[x].nrMolde</td>
                                        <td>@ViewBag.allMoldes[x].descricao</td>
                                        @{
                                            int has = 0;
                                            @for (int y = 0; y < ViewBag.molIntv.Count; y++)
                                            {
                                                if (ViewBag.molIntv[y].id == ViewBag.allMoldes[x].id)
                                                {
                                                    has = 1;
                                                }
                                            }
                                            if(has == 1)
                                            {
                                                <td style="color:darkblue">Em Uso</td>
                                                has = 0;
                                            }
                                            else
                                            {
                                                <td style="color:forestgreen">Disponível</td>
                                            }
                                        }
                                        <td>
                                            <div class="btn-group">
                                                <a role="button" asp-action="Info" asp-controller="Encargo" asp-route-id="@ViewBag.allMoldes[x].id" class="btn btn-sm  btn-primary">Ver</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h6> No momento não existe nenhum encargo de molde registado!</h6>
                    }
                    @if (@ViewBag.UserFuncId==1)
                    {
                        <a asp-action="Create" asp-controller="Molde"> <button class="btn btn-primary">Criar Molde</button> </a>
                    }
                </div>
            </div>
        </main>
    </div>
</body>

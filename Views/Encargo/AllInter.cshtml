
    <body >
        <div class="container ">
            <main>
                <div class="row g-5 justify-content-center mt-1 ">
                    <div class="col-md-7 col-lg-8 py-5 bg-white shadow-lg mt-3  table-responsive justify-content-center" >
                        @if(ViewBag.encargo!=null)
                        {
                            <table class="table table-hover tablee" >
                                <thead>
                                    <tr>
                                        <th scope="col">Molde</th>
                                        <th scope="col">Encargo</th>
                                        <th scope="col">Requerente</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int x = 0; x < ViewBag.encargo.Count; x++)
                                    {
                                        <tr>
                                            <td>@ViewBag.encargo[x].molde</td>
                                            <td>@ViewBag.encargo[x].nrEncargo</td>
                                            <td>@ViewBag.encargo[x].entidade</td>
                                            <td>@ViewBag.encargo[x].data</td>
                                            <td >
                                                <div class="btn-group">
                                                    <a role="button" asp-action="Info" asp-controller="Encargo" asp-route-id="@ViewBag.encargo[x].id" class="btn btn-sm  btn-danger">Executar</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <h6> No momento não existe nenhum encargo de molde para preencher!</h6>
                        }
                    </div>

                   
                </div>
            </main>
        </div>
    </body>


<body>
    <div class="container ">
        <main>
            <div class="row g-5 justify-content-center mt-1 ">
                    <div class="col-md-7 col-lg-8  py-5 bg-white shadow-lg mt-3 table-responsive justify-content-center">
                        <table class="table table-hover tablee " >
                            <thead>
                                <tr>
                                    <th scope="col">Molde</th>
                                    <th scope="col">Encargo</th>
                                    <th scope="col">Requerente</th>
                                    <th scope="col">Data</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.encargoVal != null)
                                {
                                    @for (int x = 0; x < ViewBag.encargoVal.Count; x++)
                                    {
                                        <tr>
                                            <td>@ViewBag.encargoVal[x].molde</td>
                                            <td>@ViewBag.encargoVal[x].nrEncargo</td>
                                            <td>@ViewBag.encargoVal[x].entidade</td>
                                            <td>@ViewBag.encargoVal[x].data</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a role="button" asp-action="Info" asp-controller="Encargo" asp-route-id="@ViewBag.encargoVal[x].id" class="btn btn-sm  btn-success"> <i class="bi bi-check2"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
        </main>
    </div>
</body>
